    "price": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "PriceResponse",
      "type": "object",
      "required": [
        "denom",
        "price"
      ],
      "properties": {
        "denom": {
          "type": "string"
        },
        "price": {
          "$ref": "#/definitions/Decimal"
        }
      },
      "additionalProperties": false,
